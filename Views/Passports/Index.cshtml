@model IEnumerable<Course_Project_TP_6.Models.Passport>

@{
    ViewBag.Title = "Index";
}

<h2>Паспорта</h2>

<p>
    @Html.ActionLink("Добавить новый паспорт", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.IssuedBy)*@ Кем выдан
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DateOfIssue)*@ Дата выдачи
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DepartamentCode)*@ Код подразделения
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Number)*@ Номер паспорта
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Users.UserName)*@ Имя
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Users.UserName)*@ Фамилия
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Users.UserName)*@ Отчество
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IssuedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfIssue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartamentCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserName)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserLastName)
        </td> 
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserPatronymic)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Passport_Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Passport_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Passport_Id })
        </td>
    </tr>
}

</table>
